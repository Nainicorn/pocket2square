<div class="__gallery">
  <div class="gallery-header">
    <button class="shuffle-btn">ðŸ”€ Shuffle</button>
  </div>

  <div class="gallery-grid">
    {{#each items}}
      <div class="gallery-card" data-id="{{this.id}}">
        {{#if (eq this.type 'image')}}
          <img src="{{this.imageUrl}}" alt="{{this.alt}}" loading="lazy">
        {{else if (eq this.type 'video')}}
          <video src="{{this.src}}" muted loop playsinline></video>
        {{/if}}
      </div>
    {{/each}}
  </div>
</div>
