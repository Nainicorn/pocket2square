<div class="save-modal-content">
  <div class="save-modal-header">
    <h2>Save to Collection</h2>
    <button class="save-modal-close" aria-label="Close">âœ•</button>
  </div>

  {{#if hasCollections}}
    <div class="collections-list">
      {{#each collections}}
        <label class="collection-option">
          <input type="checkbox" class="collection-checkbox" data-collection-id="{{this.id}}">
          <span class="collection-name">{{this.name}}</span>
          <span class="item-count">({{this.items.length}})</span>
        </label>
      {{/each}}
    </div>
  {{else}}
    <div class="no-collections">
      <p>No collections yet</p>
      <p class="hint">Create your first collection to start saving items</p>
    </div>
  {{/if}}

  <div class="save-modal-actions">
    <button class="create-new-collection-btn">+ New Collection</button>
    <button class="save-modal-done">Done</button>
  </div>
</div>
